<tr>
  <form method="post" action="/api/v1/users/<%=user.id +"?_method=PATCH"%>" >
    <td>
      <div class="d-flex px-2 py-1">
        <div>
          <% if(user.photo) {%>
            <img src="/images/<%=user.photo%>" class="avatar avatar-sm me-3" alt="<%=user.name%>">
          <%} else {%>
            <img src="/images/default.jpg" class="avatar avatar-sm me-3" >
          <%} %>     
        </div>
        <div class="d-flex flex-column justify-content-center">
          <!-- <h6 class="mb-0 text-sm"><%=user.name%></h6> -->
          <input class="form-control" type="text" style="border: none;
      border-color: transparent;" value="<%=user.name%>" size="10" name="name"> 
        </div>
      </div>
    </td>
    <td>
      <input class="form-control" type="text" style="border: none;
      border-color: transparent;" value="<%=user.email%>" size="10" name="email"> 
     
    </td>
    <td class="align-middle text-center text-sm">
      <span class="badge badge-sm bg-gradient-success">Online</span>
    </td>
    <td class="align-middle text-center">
      <span class="text-secondary text-xs font-weight-bold"><%=user.createdAt.toISOString().split('T')[0]%></span>
    </td>
    
    <td class="align-middle">
      <div class="ms-auto text-end">
        <a class="btn btn-link text-danger text-gradient px-3 mb-0"  id="deletebtn"data-model="users" data-item-id="<%=user.id%>"><i class="far fa-trash-alt me-2"></i>Delete</a>
        <button type="submit"  class="btn btn-link text-dark px-3 mb-0" ><i class="fas fa-pencil-alt text-dark me-2" aria-hidden="true" ></i>Update</button>
      </div> 
    </td>
    </form>
  </tr>